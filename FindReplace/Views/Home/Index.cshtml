@{
  Layout="_Layout";
}

  <h3>Enter a phrase and pick a word in the phrase to be replaced.</h3>
  <form action="/replaceword" method="post">
  	<div class="form-group">
      <label for="sentence">Phrase</label>
      <input id="sentence" name="sentence" type="text" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <label for="replace">Replace this word:</label>
      <input id="replace" name="replace" type="text" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <label for="word">Word to replace with:</label>
      <input id="word" name="word" type="text" class="form-control" autofocus>
    </div>
  	<button class="btn btn-info" type="submit" name="submit-check">Replace Word in phrase</button>
  </form>

@if(Model != null)
{
  <p>Phrase: @Model.GetUserSentence()</p>
  <p>Replace this Word: @Model.GetReplaceThis()</p>
  <p>Word to replace with: @Model.GetUserWord()</p>
  <hr>
  <br>
  <h4>New Phrase with replaces words</h4>
  <p>@Model.ReplaceWords()</p>
  <a href="/"><button class="btn btn-info" type="button" name="back-button">Try Again</button></a>
}
